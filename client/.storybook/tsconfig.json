{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"]
    }
  },
  "include": ["../src/**/*.ts", "../src/**/*.tsx", "../src/**/*.mdx", "../src/**/*.stories.@(ts|tsx|js|jsx|mjs)", "./*.ts", "./*.tsx"]
}
